<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Index1">

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/index1"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="8pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rost"
        android:layout_width="98dp"
        android:layout_height="24dp"
        android:layout_margin="15dp"
        android:text="Ваш рост (м)"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info" />

    <TextView
        android:id="@+id/ves"
        android:layout_width="98dp"
        android:layout_height="24dp"
        android:layout_margin="15dp"
        android:text="Ваш вес (кг)"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ROST" />

    <Button
        android:id="@+id/prod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="продолжить"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="30px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="onClickMe"/>

    <EditText
        android:id="@+id/VES"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:maxLength="3"
        android:textSize="30px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ves" />

    <EditText
        android:id="@+id/ROST"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:maxLength="3"
        android:textSize="30px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rost"/>

</androidx.constraintlayout.widget.ConstraintLayout>